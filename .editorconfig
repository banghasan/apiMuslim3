# EditorConfig untuk API Muslim v3
# https://editorconfig.org

# Ini adalah root config file
root = true

# Aturan default untuk semua file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript dan JavaScript files
[*.{ts,js,tsx,jsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.{css,scss,sass}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefile (harus pakai tab)
[Makefile]
indent_style = tab

# Deno configuration files
[deno.{json,jsonc}]
indent_size = 2

# Environment files
[.env*]
trim_trailing_whitespace = false
